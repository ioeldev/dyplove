{
	"files": {
		"includes": ["apps/**/*", "packages/**/*", "src/**/*", "frontend/**/*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"quoteProperties": "preserve",
			"indentStyle": "tab",
			"lineWidth": 120
		}
	},
	"linter": {
		"rules": {
			"a11y": {
				"noStaticElementInteractions": "off"
			}
		}
	}
}
